<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PoznejHrademMaui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PoznejHrademMaui.Pages"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    Shell.FlyoutBehavior="Flyout"
    Shell.BackgroundColor="{StaticResource Primary}"
    FlyoutBackground="{StaticResource Primary}"
    Title="PoznejHrademMaui">
    <ShellContent
        Title="{StaticResource MainPage}"
        Icon="apartmenticon.png"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="{StaticResource HowAndWhyPlayPage}"
        ContentTemplate="{DataTemplate local:HowAndWhyPlayPage}"
        Route="HowAndWhyPlayPage" />
    <ShellContent
        Title="{StaticResource EnigmaPage}"
        ContentTemplate="{DataTemplate local:EnigmaPage}"
        Route="EnigmaPage" />
    <Shell.ItemTemplate>
        <DataTemplate>
            <Grid RowDefinitions="*,20,*,1" VerticalOptions="CenterAndExpand" HeightRequest="50" Margin="0" Padding="0" HorizontalOptions="FillAndExpand" ColumnDefinitions="50,*">
               
            <VisualStateManager.VisualStateGroups>
                    <VisualStateGroupList>
                        <VisualStateGroup x:Name="CommonStates">
                            <VisualState x:Name="Normal">
                                <VisualState.Setters>
                                    <Setter Property="BackgroundColor"
                                    Value="Transparent" />
                                </VisualState.Setters>
                            </VisualState>
                            <VisualState x:Name="Selected">
                                <VisualState.Setters>
                                    <Setter Property="BackgroundColor"
                                    Value="#95FFFFFF" />
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateGroupList>
                </VisualStateManager.VisualStateGroups> <Image Source="{Binding FlyoutIcon}" Margin="5" WidthRequest="30" Grid.Row="1" HeightRequest="30">
                    <Image.Behaviors>
                        <toolkit:IconTintColorBehavior TintColor="{StaticResource Black}" />
                    </Image.Behaviors>
                </Image>
                <Label Text="{Binding Title}" Grid.Column="1" Grid.Row="1"/>
                <Label HeightRequest="1" Grid.Row="3" Grid.ColumnSpan="2" BackgroundColor="Black"/>
            </Grid>

        </DataTemplate>
    </Shell.ItemTemplate>

</Shell>
