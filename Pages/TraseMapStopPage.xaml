<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PoznejHrademMaui.Pages.TraseMapStopPage"
             Title="{StaticResource TraseMapStopPage}">
    <CollectionView x:Name="colection">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="10" ColumnDefinitions="0.1*,0.8*,0.1*" RowDefinitions="*,auto">
                    <Grid.GestureRecognizers>
                        <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
                    </Grid.GestureRecognizers>
                    <Image Source="{Binding Photo[0]}" Grid.ColumnSpan="3" Aspect="AspectFit" Grid.RowSpan="2" InputTransparent="True"/>
                    <Label Text="{Binding Title}" Grid.Column="1" Grid.Row="1" Background="Orange" Margin="0" InputTransparent="True" FontSize="Medium" TextColor="White"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
</ContentPage>